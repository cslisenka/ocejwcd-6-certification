<web-fragment xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="
        http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd" version="3.0"
        id="WebFragment_ID">

    <name>WebFragmentExample</name>

    <servlet>
        <servlet-name>Web fragment example</servlet-name>
        <servlet-class>com.example.servlet.ServletInWebFragment</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Web fragment example</servlet-name>
        <url-pattern>/webfragment</url-pattern>
    </servlet-mapping>
</web-fragment>